    <Card Name="BombEnermy"
          SpriteName="BombEnermy"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <Require ImprovementName="MassiveNuke"/>
      <Require StatName="Politic" IsLesserThen="true" Value="30"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="+70"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="-30"/>
    </Card>

    <Card Name="BombAsteroid"
          SpriteName="BombAsteroid"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <Require ImprovementName="MassiveNuke"/>
    </Card>
    
    <Card Name="BuildASpaceMission"
          SpriteName="BuildASpaceMission"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <Require StatName="Politic" IsBiggerThen="true" Value="25" />
      <Require StatName="Science" IsBiggerThen="true" Value="40"/>
      <RightEffect CardEffectType="BuildImprovement" TargetName="SpaceMission"/>
    </Card>

    <Card Name="BombAsteroidSpaceMission"
          SpriteName="BombAsteroid"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <Require ImprovementName="MassiveNuke"/>
    </Card>
  </Deck>
  
