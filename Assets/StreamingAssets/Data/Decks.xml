<?xml version="1.0" encoding="utf-8"?>
<ArrayOfDeck>
  
  <Deck Name="Default">
    
    <!--
    ideas: Gov Hope Science €
      OrganizeTopScientistsMeeting -3G +3H +10S -20€ 
      GiveATvSpeachDenyingEverything -10G +30H / +5G -10H 
      GatherCrowdIdead -10G +5S
      RaiseEmergencyTaxes +€ -H -G
      FundUniversities
      FundPrivateCompanies
      PreventLootingOrNot -> +-PoliticalStability +-€
      if hope very low -> JailAmnesty +H -PoliticalStability
      GatherUN -> +PoliticalStability +H
      BuildABunkerStartChain -> Bunker Improvement
      BuildAMassiveNuke -> Massive Nuke Improvement
        - will raise a lot political stability
        - allow you to bomb enemy country before they bomb you if stability goes down too mucj -> unlock Atomic Apocalypse
        - may allow you to bomb the asteroid is science get high
      BuildASpaceMission -> Space Mission Improvement        
        - may allow you to bomb the asteroid is science & money get high
    -->
    
    <Card Name="OrganizeTopScientistsMeeting"
          SpriteName="OrganizeTopScientistsMeeting"
          DescriptionTextLocalCode="OrganizeTopScientistsMeeting_desc"
          LeftOptionTextLocalCode="OrganizeTopScientistsMeeting_no"
          RightOptionTextLocalCode="OrganizeTopScientistsMeeting_yes">
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="-3"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="+3"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Science" FunctionParam="+10"/>
      <RightEffect TurnDelay="1" CardEffectType="AffectWorldStat" TargetName="Science" FunctionParam="+5"/>
      <RightEffect TurnDelay="2" CardEffectType="AffectWorldStat" TargetName="Science" FunctionParam="+2"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Money" FunctionParam="-15"/>
      <RightEffect CardEffectType="BuildImprovement" TargetName="ScientistMeeting" FunctionParam="3"/>
      <LeftEffect TurnDelay="2" CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="-5"/>
    </Card>

    <Card Name="GiveATvSpeachDenyingEverything"
          SpriteName="GiveATvSpeachDenyingEverything"
          LeftOptionTextLocalCode="GiveATvSpeachDenyingEverything_no"
          RightOptionTextLocalCode="GiveATvSpeachDenyingEverything_yes">
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="-10"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="+15"/>
      <LeftEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="+5"/>
      <LeftEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="-5"/>
    </Card>

    <Card Name="GatherCrowdIdead"
          SpriteName="GatherCrowdIdead"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Money" FunctionParam="-10"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Science" FunctionParam="+5"/>
    </Card>
    
    <Card Name="RaiseEmergencyTaxes"
          SpriteName="RaiseEmergencyTaxes"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Money" FunctionParam="+10"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="-20"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="-10"/>
    </Card>

    <Card Name="FundUniversities"
          SpriteName="FundUniversities"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Money" FunctionParam="-15"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Science" FunctionParam="+10"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="+5"/>
    </Card>

    <Card Name="FundPrivateCompanies"
          SpriteName="FundPrivateCompanies"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Money" FunctionParam="-15"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Science" FunctionParam="+10"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="+5"/>
    </Card>

    <Card Name="PreventLootingOrNot"
          SpriteName="PreventLootingOrNot"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Money" FunctionParam="5"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="5"/>
      <LeftEffect CardEffectType="AffectWorldStat" TargetName="Money" FunctionParam="-10"/>
      <LeftEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="-5"/>
    </Card>

    <Card Name="JailAmnesty"
          SpriteName="JailAmnesty"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="10"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="-5"/>
      <LeftEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="-30"/>
    </Card>
    
    <Card Name="GatherUN"
          SpriteName="GatherUN"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="3"/>
      <RightEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="15"/>
      <LeftEffect CardEffectType="AffectWorldStat" TargetName="Hope" FunctionParam="-3"/>
    </Card>
    
    <Card Name="BuildAMassiveNuke"
          SpriteName="BuildAMassiveNuke"
          LeftOptionTextLocalCode="_no"
          RightOptionTextLocalCode="_yes">
      <Require StatName="Money" IsBiggerThen="true" Value="50" />
      <Require StatName="Science" IsBiggerThen="true" Value="30" ImprovementName=""/>
