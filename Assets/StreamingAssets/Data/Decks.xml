      <RightEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="-15"/>
      <RightEffect CardEffectType="BuildImprovement" TargetName="MassiveNuke"/>
      <LeftEffect CardEffectType="AffectWorldStat" TargetName="Politic" FunctionParam="+5"/>
